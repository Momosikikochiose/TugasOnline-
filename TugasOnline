    function changeLanguage(language) {
      document.getElementById('hero-title').innerText = translations[language].heroTitle;
      document.getElementById('hero-description').innerText = translations[language].heroDescription;
      document.getElementById('start-now').innerText = translations[language].startNow;
      document.getElementById('about-us').innerText = translations[language].aboutUs;
      document.getElementById('about-description').innerText = translations[language].aboutDescription;
      document.getElementById('mission').innerText = translations[language].mission;
      document.getElementById('mission-description').innerText = translations[language].missionDescription;
      document.getElementById('vision').innerText = translations[language].vision;
      document.getElementById('vision-description').innerText = translations[language].visionDescription;
      document.getElementById('how-it-works').innerText = translations[language].howItWorks;
      document.getElementById('step1').innerText = translations[language].step1;
